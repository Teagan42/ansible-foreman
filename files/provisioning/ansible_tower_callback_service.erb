<%#
kind: snippet
name: ansible_tower_callback_service
model: ProvisioningTemplate
snippet: true
-%>
[Unit]
Description=Provisioning callback to Ansible Tower
Wants=network-online.target sshd.service NetworkManager-dispatcher.service
After=network-online.target sshd.service NetworkManager-dispatcher.service
Requires=network-online.target sshd.service NetworkManager-dispatcher.service


[Service]
Type=oneshot
ExecStart=/usr/bin/curl -k -s --data "host_config_key=<%= host_param('ansible_host_config_key') -%>" <%= host_param('ansible_tower_fqdn') -%>/api/v2/job_templates/<%= host_param('host_configure_job_id') -%>/callback/
ExecStartPost=/usr/bin/systemctl disable ansible-callback

[Install]
WantedBy=multi-user.target
<%#-%>
