<%#
kind: snippet
name: ansible_tower_callback_service_ubuntu
model: ProvisioningTemplate
snippet: true
-%>
[Unit]
Description=Provisioning callback to Ansible Tower
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/wget --post-data "host_config_key=<%= host_param('ansible_host_config_key') %>" <%= host_param('ansible_tower_fqdn') %>/api/v2/job_templates/<%= host_param('ansible_job_template_id') %>/callback/ -O /dev/null
ExecStartPost=/bin/systemctl disable ansible-callback

[Install]
WantedBy=multi-user.target
<%#-%>