<%#
kind: snippet
name: ansible_tower_callback_script
model: ProvisioningTemplate
snippet: true
-%>
#!/bin/sh

curlcmd() {
/usr/bin/curl -s -o /dev/null <%= host_param('ansible_tower_fqdn') %>
}

until curlcmd
do
  echo "Testing connectivity to Ansible Tower..."
  sleep 10
done

echo "Ansible Tower connection successful."
echo "Running Ansible Tower auto-provisioning callback."
/usr/bin/curl -k -s --data "host_config_key=<%= host_param('ansible_host_config_key') %>" <%= host_param('ansible_tower_fqdn') %>/api/v2/job_templates/<%= host_param('host_configure_job_id') %>/callback/

echo "Removing ansible-callback service"
/usr/bin/systemctl disable ansible-callback.service
<%#-%>
