<%#
kind: snippet
name: ansible_tower_callback_script
model: ProvisioningTemplate
snippet: true
-%>
#!/bin/sh
export SYSTEMCTLBIN=$(which systemctl)
export CURLBIN=$(which curl)
curlcmd() {
$CURLBIN -s -o /dev/null <%= host_param('ansible_tower_fqdn') %>
}

until curlcmd
do
  echo "Testing connectivity to Ansible Tower..."
  sleep 10
done

echo "Ansible Tower connection successful."
echo "Running Ansible Tower auto-provisioning callback."
$CURLBIN -k -s --data "host_config_key=<%= host_param('ansible_host_config_key') %>" <%= host_param('ansible_tower_fqdn') %>/api/v2/job_templates/<%= host_param('host_configure_job_id') %>/callback/

<% if host_param_true?('ceph_ansible_install') -%>

sleep 900

$CURLBIN -k -s --data "host_config_key=<%= host_param('ansible_host_config_key') %>" <%= host_param('ansible_tower_fqdn') %>/api/v2/job_templates/<%= host_param('ceph_ansible_job_id') %>/callback/

<% end -%>

echo "Removing ansible-callback service"
$SYSTEMCTLBIN disable ansible-callback.service
<%#-%>
